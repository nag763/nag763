---
const { project } = Astro.props;
---
<a href={project.link} class="block p-6 bg-gray-900/40 border border-gray-800 rounded-xl hover:border-blue-500/50 transition-all">
    <h4 class="text-xl font-bold text-white mb-2">{project.title}</h4>
    <p class="text-gray-400 text-sm mb-4">{project.description}</p>
    <div class="flex gap-2">
        {project.tech.map(t => <span class="text-[10px] bg-gray-800 text-gray-300 px-2 py-0.5 rounded uppercase font-bold tracking-widest">{t}</span>)}
    </div>
</a>