---
const { experience } = Astro.props;
---
<div class="relative pl-8 border-l border-gray-800">
    <div class={`absolute w-3 h-3 ${experience.current ? 'bg-emerald-500' : 'bg-gray-600'} rounded-full -left-[7px] top-2 ${experience.current ? 'shadow-[0_0_12px_rgba(16,185,129,0.8)] animate-pulse' : ''}`}></div>
    <div class="flex flex-wrap justify-between items-baseline mb-2">
        <h3 class="text-2xl font-bold text-white">{experience.title}</h3>
        <span class="text-gray-500 font-mono">{experience.period}</span>
    </div>
    <p class="text-gray-500 mb-4 italic text-sm">{experience.location}</p>
    <ul class="text-gray-400 text-lg space-y-2 max-w-3xl leading-relaxed">
        {experience.tasks.map(task => <li>â€¢ {task}</li>)}
    </ul>
    <div class="mt-4 flex flex-wrap gap-2">
        {experience.technologies.map(t => <span class="text-[10px] border border-gray-700 text-gray-400 px-2 py-0.5 rounded uppercase font-bold tracking-widest">{t}</span>)}
    </div>
</div>