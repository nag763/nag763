    </Section>

    <Section title="Selected OSS Projects">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            {projects.map(p => <Project project={p} />)}
        </div>
    </Section>

    <section id="personal" class="space-y-8 pt-10 border-t border-gray-900">
      <h2 class="text-sm font-bold text-blue-500 uppercase tracking-[0.2em]">Beyond the Code</h2>
      <div class="flex items-center gap-6">
