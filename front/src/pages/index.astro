      <div class="flex flex-wrap justify-center gap-8">
        <a href="mailto:loic.labeye.contact@pm.me" class="text-white hover:text-blue-400 font-bold transition-colors underline decoration-blue-500 underline-offset-8">loic.labeye.contact@pm.me</a>
      </div>
    </footer>
  </main>
</BaseLayout>

<style>
  html { background-color: #050505; scroll-behavior: smooth; color: white; }
  body { font-family: 'Inter', sans-serif; }
  /* Custom scrollbar for a sleeker look */
  ::-webkit-scrollbar { width: 5px; }
  ::-webkit-scrollbar-track { background: #050505; }
  ::-webkit-scrollbar-thumb { background: #1e1e1e; border-radius: 10px; }
</style>