---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';
import Header from '../components/Header.astro';
import Section from '../components/Section.astro';
import WorkExperience from '../components/WorkExperience.astro';
import Certification from '../components/Certification.astro';
import Project from '../components/Project.astro';
import Technology from '../components/Technology.astro';
import { certifications, projects, technologies, workExperiences } from '../data.ts';
---

<BaseLayout title="Lo√Øc LABEYE | Software Engineer">
  <main class="max-w-5xl mx-auto px-6 py-20 space-y-32">
    
    <Header />

    <section id="about" class="grid grid-cols-1 md:grid-cols-3 gap-12">
      <h2 class="text-sm font-bold text-blue-500 uppercase tracking-[0.2em]">Current Stack</h2>
      <div class="md:col-span-2 space-y-6 text-xl text-gray-400 leading-relaxed">
        <p>
          I thrive on building scalable systems. Currently, I'm deep-diving into <span class="text-white">Go</span> (specifically utilizing <span class="text-indigo-400 font-mono">Uber.fx</span> for dependency injection), exploring <span class="text-white">Quarkus</span> for high-performance Java, and leveraging <span class="text-white">Next.js/React</span> for my personal web projects.
